<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="10pt"
        android:textColor="@color/black"
        android:padding="6pt"
        android:id="@+id/offers_title_id"
        android:text="Anti-Food-Waste"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="5pt"
        android:textColor="@color/black"
        android:paddingLeft="6pt"
        android:paddingRight="6pt"
        android:id="@+id/offers_title_description_id"
        android:text="Støt Anti-Food-Waste ved at overveje last-call tilbud fra følgende butikker: "/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_of_offers"/>

</LinearLayout>