<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="5pt"
            android:paddingTop="4dp"
            android:paddingLeft="6dp"
            android:text="Item Title blabla"
            android:id="@+id/foodwaste_item_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="4pt"
            android:paddingTop="4dp"
            android:paddingLeft="6dp"
            android:paddingBottom="4dp"
            android:text="Item stock blabla"
            android:id="@+id/foodwaste_item_stock"/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="400px"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="4pt"
            android:paddingTop="4dp"
            android:paddingLeft="6dp"
            android:text="Price now blabla"
            android:id="@+id/foodwaste_item_newprice"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="4pt"
            android:paddingTop="4dp"
            android:paddingLeft="6dp"
            android:paddingBottom="4dp"
            android:text="Price before blabla"
            android:id="@+id/foodwaste_item_oldprice"/>

    </LinearLayout>

</LinearLayout>